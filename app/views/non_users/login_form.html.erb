<div class="main users-new">
  <div class="container">
    <div class="form-heading">ログイン</div>
    <div class="form users-form">
      <div class="form-body">

        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
        <% end %>

        <%= form_with url: login_path do |f| %>
          <p>ユーザー名</p>
          <%= f.text_field :user_name %>
          <p>パスワード　<span id="buttonEye" class="fa fa-eye" onclick="pushHideButton()"></p>       
          <%= f.password_field :password, id:"textPassword", oncopy:"return false", onpaste:"return false" %>   
          <%= f.submit value="ログイン"%>
        <% end %>
      </div>
    </div>
  </div>
</div>
